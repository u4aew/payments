.loader {
   position absolute
   top 0
   bottom 0
   left 0
   right 0
   background #f5f5f5
   z-index 50
   &:before {
      content ''
      position absolute
      width 120px
      height 120px
      border-radius 50%
      border 8px solid white
      border-left 8px solid rgba(#3d96ce, 1)
      border-bottom  8px solid rgba(#3d96ce, 1)
      top 50%
      left 50%
      z-index 99
      transform translate(-50%, -50%)
      animation load 3s linear infinite
      @keyframes load {
         0% {
            transform translate(-50%, -50%) rotate(0)
         }
         100% {
            transform translate(-50%, -50%) rotate(360deg)
         }
      }
   }
}