html,
body {
   min-width 320px
   height 100%
}

html {
   -webkit-tap-highlight-color rgba(#000, 0)
}

body {
   cursor default
   -moz-osx-font-smoothing: grayscale
   -webkit-font-smoothing: antialiased
   -webkit-text-size-adjust: 100%
   overflow-y scroll
   font-family: 'Roboto', sans-serif;
   background #f5f5f5
}

.body {
   display flex
   flex-direction column
   &__wrapper {
      overflow hidden
      flex 1 0 auto
      display flex
      flex-direction column
      position relative
   }
   &__header,
   &__footer,
   &__content {
      flex 0 0 auto
      position relative
   }
   &__content {
      flex-grow 1
   }
   &__footer {
      margin-top auto
   }
}
